{
  "version": "2.0.0",
  "command": "npm",
  "runner": "terminal",
  "suppressTaskName": true,
  "tasks": [
    {
      "taskName": "build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "args": ["run", "build"],
      "problemMatcher": "$tsc"
    },
    {
      "taskName": "test",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "args": ["test"]
    }
  ]
}
