<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
"-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
"http://tiles.apache.org/dtds/tiles-config_2_1.dtd">
<tiles-definitions>

    <!-- start base -->
    <definition name="base" template="layouts/base-layout.html">
        <put-attribute name="header" value="layouts/base-header.html" />
        <put-attribute name="footer" value="layouts/base-footer.html" />
        <put-attribute name="right-sidebar" value="layouts/base-right-sidebar.html" />
    </definition>
    
    <definition name="ajax" template="layouts/ajax-layout.html">
    </definition>
    
    <definition name="leftsidebar" extends="ajax">
        <put-attribute name="body" value="layouts/base-left-sidebar.html" />
    </definition>
</tiles-definitions>
